    </formulas>
    <formulas>
        <name>for2BDays</name>
        <dataType>Date</dataType>
        <expression>CASE( 
  MOD({!$Flow.CurrentDate} - DATE( 1900, 1, 7 ), 7 ),
  4, {!$Flow.CurrentDate} + 4,
  5, {!$Flow.CurrentDate} + 4,
  {!$Flow.CurrentDate} + 2
)</expression>
    </formulas>
    <formulas>
        <name>for5BDays</name>
        <dataType>Date</dataType>
        <expression>CASE( 
  MOD({!$Flow.CurrentDate} - DATE( 1900, 1, 7 ), 7 ),
1, {!$Flow.CurrentDate} + 7,
2, {!$Flow.CurrentDate} + 7,
3, {!$Flow.CurrentDate} + 7,
4, {!$Flow.CurrentDate} + 7,
5, {!$Flow.CurrentDate} + 7,
  {!$Flow.CurrentDate} + 5
)</expression>
    </formulas>
