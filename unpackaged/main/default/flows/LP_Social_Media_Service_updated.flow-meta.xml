    <formulas>
        <description>Add 14 business days to a date</description>
        <name>forDueDate14Bdays</name>
        <dataType>Date</dataType>
        <expression>CASE(
MOD({!$Flow.CurrentDate}- DATE(1900, 1, 7), 7),
0, ({!$Flow.CurrentDate}) + 14 + FLOOR((14-1)/5)*2,
1, ({!$Flow.CurrentDate}) + 14+ FLOOR((14)/5)*2,
2, ({!$Flow.CurrentDate}) + 14 + FLOOR((14+1)/5)*2,
3, ({!$Flow.CurrentDate}) + 14 + FLOOR((14+2)/5)*2,
4, ({!$Flow.CurrentDate}) + 14 + FLOOR((14+3)/5)*2,
5, ({!$Flow.CurrentDate}) + 14 + CEILING((14)/5)*2,
6, ({!$Flow.CurrentDate}) - IF(14&gt;0,1,0) + 14 + CEILING((14)/5)*2,
null)</expression>
    </formulas>
